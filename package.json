{
  "name": "klorie",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "schema:download": "apollo schema:download --endpoint=http://localhost:4466/ ./src/types/graphql/schema.json",
    "codegen:generate": "apollo codegen:generate --includes=./src/graphql/**/*.gql --localSchemaFile=./src/types/graphql/schema.json --outputFlat --target=typescript ./src/types/graphql/schemaTypes.ts",
    "gen:types": "npm run schema:download && npm run codegen:generate"
  },
  "dependencies": {
    "@types/graphql": "^14.2.0",
    "apollo-link-dedup": "^1.0.18",
    "iview": "^3.4.1",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-apollo": "^3.0.0-beta.11",
    "vue-class-component": "^7.0.2",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.0.6",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@vue/cli-plugin-babel": "^3.7.0",
    "@vue/cli-plugin-pwa": "^3.7.0",
    "@vue/cli-plugin-typescript": "^3.7.0",
    "@vue/cli-service": "^3.7.0",
    "apollo": "^2.9.0",
    "babel-plugin-component": "^1.1.1",
    "babel-plugin-import": "^1.11.0",
    "compression-webpack-plugin": "^2.0.0",
    "fibers": "^3.1.1",
    "graphql-tag": "^2.10.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.1.5",
    "purgecss": "^1.3.0",
    "sass": "^1.19.0",
    "sass-loader": "^7.1.0",
    "tailwindcss": "^0.7.4",
    "typescript": "^3.4.5",
    "vue-cli-plugin-apollo": "^0.19.2",
    "vue-cli-plugin-iview": "^1.0.6",
    "vue-template-compiler": "^2.6.10",
    "vuex-module-decorators": "^0.9.8"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
